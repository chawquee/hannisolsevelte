# ==============================================
# HANNISOL SOLANA ADDRESS CHECKER - NPM CONFIG
# ==============================================

# ==============================================
# PERFORMANCE OPTIMIZATION
# ==============================================
# Use faster package installation
prefer-offline=true
prefer-dedupe=true

# Enable progress bar for better visibility
progress=true

# Increase fetch timeout for slow connections
fetch-timeout=600000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-retries=3

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Audit automatically on install
audit=true
audit-level=moderate

# Verify package signatures
verify-signatures=true

# Fund notifications
fund=false

# ==============================================
# DEPENDENCY MANAGEMENT
# ==============================================
# Save exact versions for production stability
save-exact=true

# Automatically save to package.json
save=true

# Production optimizations
production=false
optional=true

# ==============================================
# CACHE CONFIGURATION
# ==============================================
# Cache configuration for faster installs
cache-max=2592000000
cache-min=10

# ==============================================
# REGISTRY CONFIGURATION
# ==============================================
# Default registry (can be overridden for specific scopes)
registry=https://registry.npmjs.org/

# Package scope configurations for common libraries
@solana:registry=https://registry.npmjs.org/
@types:registry=https://registry.npmjs.org/
@sveltejs:registry=https://registry.npmjs.org/

# ==============================================
# ENGINE REQUIREMENTS
# ==============================================
# Enforce Node.js version for consistency
engine-strict=true

# ==============================================
# PACKAGE LOCK
# ==============================================
# Use package-lock.json for reproducible builds
package-lock=true
package-lock-only=false

# ==============================================
# LOGGING & OUTPUT
# ==============================================
# Log level (silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=notice

# Color output
color=true

# Unicode characters
unicode=true

# ==============================================
# DEVELOPMENT OPTIMIZATIONS
# ==============================================
# Save dev dependencies to package.json
save-dev=true

# Include optional dependencies
include=prod,dev,optional

# ==============================================
# WORKSPACE CONFIGURATION
# ==============================================
# Workspace settings (if using workspaces)
workspaces=false

# ==============================================
# SCRIPTS CONFIGURATION
# ==============================================
# Script shell for cross-platform compatibility
script-shell=

# Ignore scripts for security (set to false to allow)
ignore-scripts=false

# ==============================================
# PROXY CONFIGURATION (Uncomment if needed)
# ==============================================
# For corporate environments behind proxy
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080
# strict-ssl=false

# ==============================================
# LOCAL OVERRIDES
# ==============================================
# User-level config overrides
user-config=/home/hannisol/.npmrc

# ==============================================
# PERFORMANCE TWEAKS
# ==============================================
# Disable update notifier to reduce noise
update-notifier=false

# Disable analytics and telemetry for privacy
disable-analytics=true

# ==============================================
# HANNISOL SPECIFIC SETTINGS
# ==============================================
# Project-specific configurations

# Deployment optimization
prune=true
omit=dev

# Error handling
halt-on-error=true

# ==============================================
# ENTERPRISE FEATURES (If using npm Enterprise)
# ==============================================
# Enterprise registry configuration
# enterprise-registry=
# enterprise-auth=

# ==============================================
# TROUBLESHOOTING SETTINGS
# ==============================================
# For debugging package issues
# loglevel=verbose
# foreground-scripts=true

# Legacy peer deps handling
legacy-peer-deps=false
strict-peer-deps=true

# ==============================================
# NODE OPTIONS
# ==============================================
# Node.js specific options for builds
node-options=--max-old-space-size=2048

# ==============================================
# END OF CONFIGURATION
# ==============================================